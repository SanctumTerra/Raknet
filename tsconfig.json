{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".", 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,    
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "*/node_modules/",
    "dist"
  ],
  "ts-node": {
    "swc": true, 
    "transpileOnly": true 
  }
}

